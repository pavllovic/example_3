doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(content='width=device-width, initial-scale=1' name='viewport')
    meta(name="referrer" content="strict-origin-when-cross-origin")
    title #{htmlWebpackPlugin.options.title}
    block preload
    link(rel='icon' href=require('Images/favicon/favicon.ico').default  sizes='any')
    link(rel='icon' href=require('Images/favicon/icon.svg').default type='image/svg+xml')
    link(rel='apple-touch-icon' href=require('Images/favicon/apple-touch-icon.png').default)
    link(rel='preload' href=require('Fonts/roboto-400.woff2').default as='font' type='font/woff2' crossorigin='anonymous')
    block styles
    link(href="https://fonts.googleapis.com/css2?family=Roboto:wght@900&text=LM&display=swap" rel='stylesheet')
  body
    -
      const formattPrice = function(price) {
        price = price.toString().split('')
        let i = price.length
        while(i > 3) {
          i = i - 3;
          price[i] = ' ' + price[i]
        }
        return price.join('');
      }
    block content