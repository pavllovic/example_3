mixin combobox(options, id, name)
  div(class=`combobox combobox-${id}`)
    input(class='visually-hidden' name=`${name}` aria-hidden='true' tabindex='-1' placeholder=' ' required value=`${options[0]}`)
    div(class='combobox--input' tabindex='0' role='combobox'
        aria-controls=`${id}-options` 
        aria-haspopup='listbox' 
        aria-expanded='false' 
        aria-labelledby=`${id}` 
        aria-autocomplete='none') #{options[0]}
    div(class='combobox--options' id=`${id}-options` role='listbox')
      each option, index in options
        div(class='combobox--item' id=`${id}-${index}` role='option' aria-selected='false') #{option}
