mixin combobox-size(options, id, name)
  p(class=`combobox combobox-${id}`)
    input(class='visually-hidden' name=`${name}` aria-hidden='true' tabindex='-1' placeholder=' ' required 
          value=`${options[0].depth} СМ × ${options[0].width} СМ × ${options[0].height}`)
    p(class='combobox--input' tabindex='0' role='combobox'
        aria-controls=`${id}-options` 
        aria-haspopup='listbox' 
        aria-expanded='false' 
        aria-label=`${name}` 
        aria-autocomplete='none') #{options[0].depth} СМ × #{options[0].width} СМ × #{options[0].height} СМ
    p(class='combobox--options' id=`${id}-options` role='listbox')
      each option, index in options
        p(class='no-wrap combobox--item' id=`${id}-${index}` role='option' aria-selected='false') #{option.depth} СМ × #{option.width} СМ × #{option.height} СМ
