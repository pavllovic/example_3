mixin menu-action_links(id, links, btn_text)
  include ../icon/icon.pug
  div(class='menu-action' id=`${id}`)
    button(type='button' aria-haspopup='true' aria-expanded='false' aria-controls=`${id}--menu` id=`${id}--btn`) 
      span(class='menu-action--icon menu-action--icon_etc' aria-hidden='true')
        +icon('etc')
      span(class='visually-hidden') #{btn_text}
    div(id=`${id}--menu` tabindex='0' role='menu' aria-hidden='true' aria-labelledby=`${id}--btn` aria-activedescendant)
      each link in links
        a(href=`${link.href}` id=`link-${link.id}` role='menuitem') #{link.text}